<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
    <li>
        <%= link_to "Edit", edit_article_path(@article)%>
    </li>
</ul>

<%= button_to "Destroy", article_path(@article),
            method: :delete,
            class: "btn btn-danger",
            data: { confirm: "Are you sure" }%>

<%= back %>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>